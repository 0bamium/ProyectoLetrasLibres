  "components": {
    "schemas": {
      "Libros": {
        "required": [
          "autor",
          "cantidad",
          "editorial",
          "genero",
          "isbn",
          "titulo"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "titulo": {
            "maxLength": 200,
            "minLength": 0,
            "type": "string"
          },
          "autor": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "genero": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "descripcion": {
            "maxLength": 1000,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "editorial": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "isbn": {
            "minLength": 1,
            "pattern": "^(?=(?:\\D*\\d){10}(?:(?:\\D*\\d){3})?$)[\\d-]+$",
            "type": "string"
          },
          "cantidad": {
            "maximum": 1000,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "fechaPublicacion": {
            "type": "string",
            "format": "date",
            "nullable": true
          },
          "idioma": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string",
            "nullable": true
          },
          "calificacionPromedio": {
            "maximum": 5,
            "minimum": 0,
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "estaDisponible": {
            "type": "boolean",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "Prestamos": {
        "required": [
          "estado",
          "fechaPrestamo",
          "libroId",
          "usuarioId"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "usuarioId": {
            "type": "string",
            "format": "uuid"
          },
          "usuario": {
            "$ref": "#/components/schemas/Usuarios"
          },
          "libroId": {
            "type": "string",
            "format": "uuid"
          },
          "libro": {
            "$ref": "#/components/schemas/Libros"
          },
          "fechaPrestamo": {
            "type": "string",
            "format": "date-time"
          },
          "fechaDevolucion": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "fechaLimite": {
            "type": "string",
            "format": "date-time"
          },
          "estado": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "Usuarios": {
        "required": [
          "apellido",
          "correo",
          "direccion",
          "nombre"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "nombre": {
            "minLength": 1,
            "type": "string"
          },
          "apellido": {
            "minLength": 1,
            "type": "string"
          },
          "telefono": {
            "type": "string",
            "nullable": true
          },
          "correo": {
            "minLength": 1,
            "type": "string"
          },
          "direccion": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
